@model InmobiliariaAlbornoz.Models.Inquilino

@{
    ViewData["Title"] = "Cargar Inquilino";
}

<h1>Cargar</h1>

<h4>Inquilino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dni" class="control-label"></label>
                <input asp-for="Dni" class="form-control" required/>
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" required/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaN" class="control-label">Fecha de Nacimiento</label>
                <input asp-for="FechaN" type="date" class="form-control" required/>
                <span asp-validation-for="FechaN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DireccionTrabajo" class="control-label">Dirección de Trabajo</label>
                <input asp-for="DireccionTrabajo" class="form-control" required/>
                <span asp-validation-for="DireccionTrabajo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label">Teléfono</label>
                <input asp-for="Telefono" class="form-control" required/>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" class="form-control" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="DniGarante" class="control-label">Dni del Garante</label>
                <input asp-for="DniGarante" class="form-control" required/>
                <span asp-validation-for="DniGarante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreGarante" class="control-label">Nombre del Garante</label>
                <input asp-for="NombreGarante" class="form-control" required/>
                <span asp-validation-for="NombreGarante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoGarante" class="control-label">Teléfono del Garante</label>
                <input asp-for="TelefonoGarante" class="form-control" required/>
                <span asp-validation-for="TelefonoGarante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailGarante" class="control-label">Email del Garante</label>
                <input asp-for="EmailGarante" type="email" class="form-control" required/>
                <span asp-validation-for="EmailGarante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cargar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
